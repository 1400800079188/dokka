<project name="Dokka" default="build">
    <typedef resource="org/jetbrains/kotlin/ant/antlib.xml" classpath="${kotlin.compiler}/lib/kotlin-ant.jar"/>

    <target name="build">
        <mkdir dir="out"/>

        <kotlinc src="src" output="out/dokka.jar">
            <classpath>
                <fileset dir="lib" includes="*.jar"/>
            </classpath>
        </kotlinc>
    </target>
</project>
